<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <!-- the core system needs to have the core services, and the servlet package scanned -->
    <!-- external service contexts should be loaded by the core application itself, loading external jars or whatever -->
    <context:component-scan base-package="org.protorepose.core.servlet"/>

    <!--<context:annotation-config/>-->

</beans>
